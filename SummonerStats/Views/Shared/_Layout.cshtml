<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="champ-hd" style="background-image:url(@ViewBag.BG)"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Summoner Stats", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div style="text-align:right; padding: 10px 0;">
                @using (Html.BeginForm("Search", "Profile", new { id = "search-fld" }, FormMethod.Get))
                {
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Summoner Name" id="search-fld" name="searchName" />
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
    $(document).ready(function () {
        $('.xpnd-a').on('click', function (event) {
            var target = "#" + $(this).attr('data-toggle');
            event.preventDefault();
            $(target).toggle();
        })
    })
    </script>
</body>
</html>
